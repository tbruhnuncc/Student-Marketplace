<%- include('../partials/header.ejs') %>
<main class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/products">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= product.title %></li>
        </ol>
    </nav>
    <div class="card" style="max-width: 800px; margin: 0 auto;">
        <img 
            src="<%= product.image %>" 
            class="card-img-top" 
            alt="An image of <%= product.title %>"
            style="width: 100%; height: auto; object-fit: contain;">
        <div class="card-body">
            <h3 class="card-title"><%= product.title %></h3>
            <p class="card-text">
                <strong>Condition:</strong> <%= product.condition %><br>
                <strong>Price:</strong> $<%= product.price.toFixed(2) %><br>
                <p><strong>Seller:</strong> 
                    <a href="/users/profile/<%= product.seller._id %>">
                        <%= product.seller.firstName %> <%= product.seller.lastName %>
                    </a>
                </p><br>
                <strong>Description:</strong> <%= product.description %><br>
                
                <% if (product.seller._id.equals(session.passport.user.id)) { %>
                    <form class="item-buttons" method="POST">
                        <button type="submit" formmethod="GET" formaction="/products/<%= product.id %>/edit">Edit</button>
                        <button type="submit" formmethod="POST" formaction="/products/<%= product.id %>?_method=DELETE">Delete</button>                    
                    </form>
                <% } %>
            </p>
        </div>
    </div>
</main>
<%- include('../partials/footer.ejs') %>

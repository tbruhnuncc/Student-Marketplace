<%- include('../partials/header.ejs') %>
<main class="container mt-5">
    <div class="card">
        <img src="<%= product.image %>" class="card-img-top" alt="An image of a <%= product.title %>">
        <div class="card-body">
            <h3 class="card-title"><%= product.title %></h3>
            <p class="card-text">
                <strong>Condition:</strong> <%= product.condition %><br>
                <strong>Price:</strong> <%= product.price %><br>
                <p><strong>Seller:</strong> 
                    <a href="/users/profile/<%= product.seller._id %>">
                        <%= product.seller.firstName %> <%= product.seller.lastName %>
                    </a>
                </p><br>
                <strong>Description:</strong> <%= product.description %><br>
                
                <% if (product.seller._id.equals(session.passport.user.id)) { %>
                    <form class="item-buttons" method="POST">
                        <button type="submit" formmethod="GET" formaction="/products/<%= product.id %>/edit">Edit</button>
                        <button type="submit" formmethod="POST" formaction="/products/<%= product.id %>?_method=DELETE">Delete</button>                    
                    </form>
                <% } %>
            </p>
        </div>
    </div>
</main>
<%- include('../partials/footer.ejs') %>

<%- include('../partials/header.ejs')%>
<main class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6"> <!-- This controls the width of the box -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1>Edit a New Item</h1>
                    <form method="POST" action="/products/<%= product.id%>?_method=PUT" enctype="multipart/form-data" class="item-form">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title:</label>
                            <input type="text" class="form-control" id="title" name="title" value="<%= product.title%>" required>
                        </div>

                        <div class="mb-3">
                            <label for="price" class="form-label">Price:</label>
                            <input type="number" class="form-control" id="price" name="price" min="0.01" step="0.01" value="<%= product.price%>"required>
                        </div>

                        <div class="mb-3">
                            <label for="condition" class="form-label">Condition:</label>
                            <select class="form-control" id="condition" name="condition" required >
                                <option value="">Select condition</option>
                                <option value="New" <%= product.condition === 'New' ? 'selected' : '' %>>New</option>
                                <option value="Like-New" <%= product.condition === 'Like-New' ? 'selected' : '' %>>Like New</option>
                                <option value="Good" <%= product.condition === 'Good' ? 'selected' : '' %>>Good</option>
                                <option value="Fair" <%= product.condition === 'Fair' ? 'selected' : '' %>>Fair</option>
                                <option value="Poor" <%= product.condition === 'Poor' ? 'selected' : '' %>>Poor</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="tags" class="form-label">Tags (select up to 5):</label>
                            <select class="form-control" id="tags" name="tags" multiple>
                                <option value="Electronics" <%= product.tags.includes('Electronics') ? 'selected' : '' %>>Electronics</option>
                                <option value="Furniture" <%= product.tags.includes('Furniture') ? 'selected' : '' %>>Furniture</option>
                                <option value="Books" <%= product.tags.includes('Books') ? 'selected' : '' %>>Books</option>
                                <option value="Clothing" <%= product.tags.includes('Clothing') ? 'selected' : '' %>>Clothing</option>
                                <option value="School Supplies" <%= product.tags.includes('School Supplies') ? 'selected' : '' %>>School Supplies</option>
                                <option value="Sports Equipment" <%= product.tags.includes('Sports Equipment') ? 'selected' : '' %>>Sports Equipment</option>
                                <option value="Kitchenware" <%= product.tags.includes('Kitchenware') ? 'selected' : '' %>>Kitchenware</option>
                                <option value="Accessories" <%= product.tags.includes('Accessories') ? 'selected' : '' %>>Accessories</option>
                                <option value="Home Decor" <%= product.tags.includes('Home Decor') ? 'selected' : '' %>>Home Decor</option>
                                <option value="Entertainment" <%= product.tags.includes('Entertainment') ? 'selected' : '' %>>Entertainment</option>
                                <option value="Health & Beauty" <%= product.tags.includes('Health & Beauty') ? 'selected' : '' %>>Health & Beauty</option>
                            </select>
                            <small class="form-text text-muted">Hold Ctrl (Cmd on Mac) to select multiple tags.</small>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Details:</label>
                            <textarea class="form-control" id="description" name="description" rows="4" required><%=product.description%></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="currentImage" class="form-label">Current Image:</label>
                            <img src="<%= product.image %>" alt="Current Image" style="width:150px; height:auto; display:block; margin-bottom:10px;">
                        </div>
                        
                        <div class="mb-3">
                            <label for="newImage" class="form-label">Upload New Image:</label>
                            <input type="file" class="form-control" id="newImage" name="image" accept="image/*">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include('../partials/footer.ejs')%>